extends ../layouts/default

block variables
	- const title = "AKRA";

block content
	.wrapper
		include ../../blocks/modules/header/header
		.page 
			.login.form-relative
				.login__container.container.general-form-container.form-front-side 
					form.login__form.form(action="#" method="method")
						.form__title.login__form--title Вход
						.form__subtitle Выберите, какую информацию использовать для входа в личный кабинет
						.form__container
							.form__btns
								.form__btn.form__btn-email.active 
									|E-mail
								.form__btn.form__btn-tel 
									|Телефон
							.form__email
								label Ваш E-mail
									span.red-star *
								.form__input.form__input-email
									input(type="text", placeholder="Введите ваш e-mail").input
							.form__tel
								label Ваш номер телефона
									span.red-star *
								.form__body-tel 
									.form__select-country-tel 
										img(src="img/pages/contacts/flag.svg", alt="alt")
										img(src="img/pages/contacts/arrows.svg", alt="alt")
									.form__input-wrapper-tel 
										.form__input.form__input-tel
											input(type="tel", placeholder="(_ _ _) _ _ _ - _ _ - _ _").input
							.form__pasword
								label 
									span Пароль
										span.red-star *
								a.form__pasword--fogot(href="#") Забыли пароль?
								.form__input.form__input-email
									input(type="text", placeholder="Введите ваш пароль").input
							.form__captcha
								.checkbox
									input#formAgreement.checkbox__input._req(checked='' type='checkbox' name='agreement')
									label.checkbox__label(for='formAgreement')
										span
											|Я не робот
								.form__captcha-icon 
									img(src="img/pages/contacts/captcha.svg", alt="alt")
								.form__captcha-bottom Конфиденциальность — условия использования
							.checkbox.checkbox-remember
								input#remember.checkbox__input._req(type='checkbox' name='agreement')
								label.checkbox__label.checkbox-remember__label(for='remember')
									span
										|Запомнить меня
							button.form__button.form__button-front(type="submit") Отправить вопрос
					.login__right.form-side 
						.login__right--title.form-side--title Присоединяйтесь к команде AKRA
						a.login__right--btn.form-side--btn(href="#") 
							span Зарегистрироваться
				.login__back-side.container.general-form-container.form-back-side.active 
					.login__left.form-side 
						button.login__back--btn.form-side--btn
							span Вернуться назад
					form.login__form.form(action="#" method="method")
						.form__title.login__form--title Вход
						.form__subtitle Выберите, какую информацию использовать для входа в личный кабинет
						.form__container
							.form__confirm-sms 
								.form__confirm-sms--title Код подтверждения из СМС
									span.red-star *
								.pincode
									input.input-number(type='number')
									input.input-number(type='number')
									input.input-number(type='number')
									input.input-number(type='number')
									input.input-number(type='number')
								.form__confirm-sms--input 
								#time.form__confirm-sms--valid.form__confirm-sms--text 
									|Код действителен 
									span.valid-minutes.timer__minutes 30 
									|мин. 
									span.valid-seconds.timer__seconds 00 
									|сек. 
								#time1.form__confirm-sms--send-new.form__confirm-sms--text 
									|Выслать новый через 
									span.send-new-seconds.timer__seconds1 59 
									|сек.
							.form-side__btns-submit-code
								button.form__button.form-side__button-send-again(type="submit") Отправить повторно
								button.form__button.form-side__button-send(type="submit") Отправить

		include ../../blocks/modules/footer/footer


block scripts
	script(src="js/vendor.js")
	script(src="js/main.js")
