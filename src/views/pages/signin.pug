extends ../layouts/default

block variables
	- const title = "AKRA";

block content
	.wrapper
		include ../../blocks/modules/header/header
		.page 
			.general-popap-wrapper
				.general-popap-back
				.singin__popap.general-popap
					.general-popap__container
						span.general-popap__close
						.general-popap__title 
						.general-popap__icon 
						.general-popap__text 
			.singin.form-relative
				.singin__container.container.general-form-container.form-front-side 
					.singin__right.form-side 
						.signin__right--title.form-side--title У Вас уже есть аккаунт?
						a.singin__right--btn.form-side--btn(href="#") 
							span Войти
					form.singin__form.form(action="#" method="method")
						.form__title.singin__form--title Регистрация
						.form__subtitle Выберите, какую информацию использовать для восстановления пароля
						.form__container
							.form__btns
								.form__btn.form__btn-email.active 
									|E-mail
								.form__btn.form__btn-tel 
									|Телефон
							.form__email
								label Ваш E-mail
									span.red-star *
								.form__input.form__input-email
									input(type="text", placeholder="Введите ваш e-mail").input
							.form__tel
								.form__subtitle.form__subtitle-tel Введите номер телефона. 
									br
									|Код смены пароля будет выслан по СМС.
								label Ваш номер телефона
									span.red-star *
								.form__body-tel 
									.form__select-country-tel 
										img(src="img/pages/contacts/flag.svg", alt="alt")
										img(src="img/pages/contacts/arrows.svg", alt="alt")
									.form__input-wrapper-tel 
										.form__input.form__input-tel
											input(type="tel", placeholder="(_ _ _) _ _ _ - _ _ - _ _").input
							.form__captcha
								.checkbox
									input#formAgreement.checkbox__input._req(checked='' type='checkbox' name='agreement')
									label.checkbox__label(for='formAgreement')
										span
											|Я не робот
								.form__captcha-icon 
									img(src="img/pages/contacts/captcha.svg", alt="alt")
								.form__captcha-bottom Конфиденциальность — условия использования
							
							.form__agreement 
								.checkbox-radio
									|Я согласен(на) на обработку 
									a(href="#") персональных данных 
									|в соответствии с 
									a(href="#") Политикой
									input(type='checkbox' name='namecheckbox-radio_1')
							button.form__button.form__button-front(type="submit") Отправить вопрос
				.singin__back-side.container.general-form-container.form-back-side.active 
					.singin__left.form-side 
						button.singin__back--btn.form-side--btn
							span Вернуться назад
					form.singin__form.form(action="#" method="method")
						.form__title.singin__form--title Регистрация
						.form__subtitle На ваш номер было выслано СМС с кодом подтверждения
						.form__container
							.form__confirm-sms 
								.form__confirm-sms--title Код подтверждения
									span.red-star *
								.pincode
									input.input-number(type='number')
									input.input-number(type='number')
									input.input-number(type='number')
									input.input-number(type='number')
									input.input-number(type='number')
								#time.form__confirm-sms--valid.form__confirm-sms--text 
									|Код действителен 
									span.valid-minutes.timer__minutes 30 
									|мин. 
									span.valid-seconds.timer__seconds 00 
									|сек. 
								#time1.form__confirm-sms--send-new.form__confirm-sms--text 
									|Выслать новый через 
									span.send-new-seconds.timer__seconds1 59 
									|сек.
							.form-side__btns-submit-code
								button.form__button.form-side__button-send-again(type="submit") Отправить повторно
								button.form__button.form-side__button-send(type="submit") Отправить

		include ../../blocks/modules/footer/footer


block scripts
	script(src="js/vendor.js")
	script(src="js/main.js")
